# ==============================================================================
# NUNA CURATE - PRODUCTION ENVIRONMENT CONFIGURATION
# ==============================================================================
# Copy this file to .env.production and fill in the values
# ==============================================================================

# ------------------------------------------------------------------------------
# Database Configuration (PostgreSQL)
# ------------------------------------------------------------------------------
POSTGRES_DB=nuna_curate
POSTGRES_USER=nuna_user
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_IN_PRODUCTION
POSTGRES_PORT=5432

# ------------------------------------------------------------------------------
# Redis Configuration
# ------------------------------------------------------------------------------
REDIS_PASSWORD=CHANGE_THIS_STRONG_REDIS_PASSWORD
REDIS_PORT=6379

# ------------------------------------------------------------------------------
# JWT & Security
# ------------------------------------------------------------------------------
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_RANDOM_SECRET_IN_PRODUCTION
JWT_EXPIRES_IN=7d

# ------------------------------------------------------------------------------
# Stellar/Soroban Configuration
# ------------------------------------------------------------------------------
# Network: testnet | mainnet
STELLAR_NETWORK=testnet

# Soroban RPC URL
# Testnet: https://soroban-testnet.stellar.org
# Mainnet: https://soroban-mainnet.stellar.org
SOROBAN_RPC_URL=https://soroban-testnet.stellar.org

# Contract IDs (deployed contract addresses)
NFT_CONTRACT_ID=
MARKETPLACE_CONTRACT_ID=

# ------------------------------------------------------------------------------
# Frontend Configuration (Next.js)
# ------------------------------------------------------------------------------
# Public API URL (for client-side requests)
NEXT_PUBLIC_API_URL=https://api.your-domain.com

# Public Stellar configuration (for client-side)
NEXT_PUBLIC_STELLAR_NETWORK=testnet
NEXT_PUBLIC_SOROBAN_RPC_URL=https://soroban-testnet.stellar.org
NEXT_PUBLIC_NFT_CONTRACT_ID=
NEXT_PUBLIC_MARKETPLACE_CONTRACT_ID=

# ------------------------------------------------------------------------------
# CORS Configuration
# ------------------------------------------------------------------------------
# Allowed origins (comma-separated for multiple)
CORS_ORIGIN=https://your-domain.com,https://www.your-domain.com

# ------------------------------------------------------------------------------
# File Upload Configuration
# ------------------------------------------------------------------------------
# Max file size in bytes (default: 10MB)
MAX_FILE_SIZE=10485760

# Upload path (inside container)
UPLOAD_PATH=/app/uploads

# ------------------------------------------------------------------------------
# Rate Limiting
# ------------------------------------------------------------------------------
# Time window in seconds
RATE_LIMIT_TTL=60

# Max requests per time window
RATE_LIMIT_MAX=100

# ------------------------------------------------------------------------------
# IPFS Configuration (Optional)
# ------------------------------------------------------------------------------
IPFS_GATEWAY=https://ipfs.io

# Pinata (for IPFS pinning)
PINATA_API_KEY=
PINATA_SECRET_KEY=

# ------------------------------------------------------------------------------
# Nginx Configuration
# ------------------------------------------------------------------------------
HTTP_PORT=80
HTTPS_PORT=443

# ------------------------------------------------------------------------------
# Monitoring & Logging (Optional)
# ------------------------------------------------------------------------------
# Sentry DSN for error tracking
SENTRY_DSN=

# Log level: error | warn | info | debug
LOG_LEVEL=info

# ------------------------------------------------------------------------------
# Email Configuration (Optional - for notifications)
# ------------------------------------------------------------------------------
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@your-domain.com

# ------------------------------------------------------------------------------
# Analytics (Optional)
# ------------------------------------------------------------------------------
GOOGLE_ANALYTICS_ID=
