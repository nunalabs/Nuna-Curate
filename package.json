{
  "name": "nuna-curate",
  "version": "1.0.0",
  "private": true,
  "description": "Professional NFT marketplace on Stellar Soroban",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build --filter=@nuna-curate/web",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "contracts:build": "cd packages/contracts && cargo build --target wasm32-unknown-unknown --release",
    "contracts:test": "cd packages/contracts && cargo test",
    "contracts:deploy": "cd packages/contracts && ./scripts/deploy.sh",
    "vercel-build": "npm install -g pnpm@8.15.0 && pnpm install && turbo run build --filter=@nuna-curate/web",
    "postinstall": "echo 'Skipping default install - using vercel-build instead'"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "prettier": "^3.1.0",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
