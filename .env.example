# ===========================================
# Nuna Curate - Environment Variables
# ===========================================

# -----------------
# STELLAR/SOROBAN
# -----------------
# Network: TESTNET or PUBLIC
NEXT_PUBLIC_STELLAR_NETWORK=TESTNET

# Stellar RPC URL
NEXT_PUBLIC_STELLAR_RPC_URL=https://soroban-testnet.stellar.org
STELLAR_RPC_URL=https://soroban-testnet.stellar.org

# Contract Addresses (deployed on Stellar)
NEXT_PUBLIC_NFT_CONTRACT_ID=
NEXT_PUBLIC_MARKETPLACE_CONTRACT_ID=
NFT_CONTRACT_ID=
MARKETPLACE_CONTRACT_ID=

# Horizon URL (for account queries)
NEXT_PUBLIC_HORIZON_URL=https://horizon-testnet.stellar.org
HORIZON_URL=https://horizon-testnet.stellar.org

# -----------------
# IPFS/PINATA
# -----------------
# Pinata JWT (recommended)
NEXT_PUBLIC_PINATA_JWT=

# Or use API Key/Secret (legacy)
NEXT_PUBLIC_PINATA_API_KEY=
NEXT_PUBLIC_PINATA_SECRET_KEY=

# Pinata Gateway
NEXT_PUBLIC_PINATA_GATEWAY=https://gateway.pinata.cloud

# -----------------
# DATABASE
# -----------------
DATABASE_URL=postgresql://username:password@localhost:5432/nuna_curate
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# -----------------
# REDIS
# -----------------
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# -----------------
# JWT/AUTH
# -----------------
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRATION=15m
REFRESH_TOKEN_SECRET=your-refresh-token-secret-change-this
REFRESH_TOKEN_EXPIRATION=7d

# -----------------
# API
# -----------------
# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:3001/api/v1
API_PORT=3001

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
FRONTEND_PORT=3000

# -----------------
# INDEXER
# -----------------
# Starting ledger for indexer (leave empty to auto-detect)
INDEXER_START_LEDGER=

# Poll interval in milliseconds
INDEXER_POLL_INTERVAL=5000

# -----------------
# WEBSOCKET
# -----------------
WS_PORT=3002
NEXT_PUBLIC_WS_URL=http://localhost:3002

# -----------------
# RATE LIMITING
# -----------------
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# -----------------
# EMAIL (Optional)
# -----------------
SENDGRID_API_KEY=
FROM_EMAIL=noreply@nunacurate.com

# -----------------
# MONITORING (Optional)
# -----------------
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# DataDog (Optional)
DD_API_KEY=
DD_APP_KEY=

# -----------------
# AWS (Optional - for S3 backups)
# -----------------
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# -----------------
# SECURITY
# -----------------
# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Cookie secret
COOKIE_SECRET=your-cookie-secret-change-this

# -----------------
# FEATURES FLAGS
# -----------------
ENABLE_INDEXER=true
ENABLE_WEBSOCKET=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_ANALYTICS=true

# -----------------
# DEVELOPMENT
# -----------------
NODE_ENV=development
LOG_LEVEL=debug

# Next.js
NEXT_TELEMETRY_DISABLED=1

# -----------------
# PRODUCTION ONLY
# -----------------
# Domain
# NEXT_PUBLIC_DOMAIN=nunacurate.com

# CDN
# CDN_URL=https://cdn.nunacurate.com

# Analytics
# GOOGLE_ANALYTICS_ID=
# MIXPANEL_TOKEN=
